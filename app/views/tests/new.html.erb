<% provide(:title, 'Start Quiz') %>
<div class="center hero-unit">
	<h1>TasteSeeker</h1>
	<h2>
		For each pair of images, click on the one you like best.
	</h2>
	<%= form_for(@test) do |f| %>
		<%= render 'shared/error_messages' %>

		<%= f.hidden_field :started, :value => true %>

		<%= f.submit "Start!", class: "btn btn-large btn-primary" %>
	<% end %>
</div>